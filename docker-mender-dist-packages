set -e

IMAGE_NAME=mender-dist-packages-builder

# Pass GPG key as build argument if set
if [ -n "${GPG_KEY_BUILD}" ]; then
    docker build --tag ${IMAGE_NAME} --build-arg GPG_KEY_BUILD="${GPG_KEY_BUILD}" .
else
    docker build --tag ${IMAGE_NAME} .
fi

mkdir -p output

docker run --rm \
        --volume $(pwd)/output:/output \
        $IMAGE_NAME \
        mender-client \
        github.com/mendersoftware/mender \
        ${MENDER_VERSION:-master}

# docker run --rm \
#         --volume $(pwd)/output:/output \
#         $IMAGE_NAME \
#         mender-shell \
#         github.com/mendersoftware/mender-shell \
#         ${MENDER_SHELL_VERSION:-master}

sudo chown $(id -u):$(id -g) output/*
